    body
        header.main-header
            img.navbar__logo(src="/img/logo.png")
            nav.main-header__nav
                ul.main-header__items-list
                    li.main-header__item
                        a(href="/", class=(path === '/' ? 'active' : '')) Shop
                    li.main-header__item
                        a(href="/", class=(path === '' ? 'active' : '')) Category
                    li.main-header__item
                        a(href="/", class=(path === '' ? 'active' : '')) Request Book
                    li.main-header__item
                        a(href="/admin/add-product", class=(path === '/admin/add-product' ? 'active' : '')) Add Product
                ul.main-header__user-actions-list
                    li.main-header__user-actions-item
                        a(href="/login") Login
                    text /
                    li.main-header__user-actions-item
                        a(href="/signup") SignUp
        block content